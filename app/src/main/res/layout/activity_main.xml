<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.example.shivani.androidconcepts.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/toolbar">
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24dp"
            android:typeface="serif"
            android:gravity="center"
            android:paddingLeft="25dp"
            android:drawableTop="@mipmap/ic_launcher_round"
            android:textColor="@color/white" />
    </android.support.v7.widget.Toolbar>
    <TableLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/activityBtn"
                 android:layout_height="85dp"
                android:layout_width="160dp"
                android:text="ctivity"
                android:textSize="16dp"
                android:drawableLeft="@drawable/a"
                android:paddingLeft="35dp"
                android:textColor="@color/white"
                android:typeface="serif"
                android:background="@drawable/item_style_purple"
                android:elevation="3dp"
                android:gravity="center_vertical"
                android:layout_column="1"
                android:textAllCaps="false"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/fragmentBtn"
                 android:layout_height="85dp"
                android:layout_width="160dp"
                android:text="ragment"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/f"
                android:paddingLeft="35dp"
                android:drawablePadding="-5dp"
                android:elevation="3dp"
                android:typeface="serif"
                android:background="@drawable/item_style"
                android:gravity="center_vertical"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                />
            
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/intentBtn"
                 android:layout_height="85dp"
                android:layout_width="160dp"
                android:text="ntent"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/i"
                android:paddingLeft="35dp"
                android:drawablePadding="-6dp"
                android:typeface="serif"
                android:elevation="3dp"
                android:background="@drawable/item_style"
                android:gravity="center_vertical"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                />
            <TextView
                android:id="@+id/serviceBtn"
                 android:layout_height="85dp"
                android:layout_width="160dp"
                android:text="ervice"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/s"
                android:paddingLeft="35dp"
                android:typeface="serif"
                android:elevation="3dp"
                android:background="@drawable/item_style_purple"
                android:gravity="center_vertical"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                />

        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/broadcastBtn"
                 android:layout_height="85dp"
                android:layout_width="160dp"
                android:text="roadcast"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/b"
                android:paddingLeft="35dp"
                android:typeface="serif"
                android:elevation="3dp"
                android:background="@drawable/item_style_purple"
                android:gravity="center_vertical"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                />
            <TextView
                android:id="@+id/contentProviderBtn"
                 android:layout_height="85dp"
                android:layout_width="160dp"
                android:text="ontent Provider"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/c"
                android:paddingLeft="5dp"
                android:typeface="serif"
                android:elevation="3dp"
                android:background="@drawable/item_style"
                android:gravity="center_vertical"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/layoutBtn"
                 android:layout_height="85dp"
                android:layout_width="160dp"
                android:text="ayout"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/l"
                android:drawablePadding="-4dp"
                android:paddingLeft="35dp"
                android:typeface="serif"
                android:elevation="3dp"
                android:background="@drawable/item_style"
                android:gravity="center_vertical"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                />
            <TextView
                android:id="@+id/materialBtn"
                 android:layout_height="85dp"
                android:layout_width="160dp"
                android:text="aterial"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/m"
                android:paddingLeft="35dp"
                android:drawablePadding="5dp"
                android:typeface="serif"
                android:elevation="3dp"
                android:background="@drawable/item_style_purple"
                android:gravity="center_vertical"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                />

        </TableRow>
    </TableLayout>
</RelativeLayout>

