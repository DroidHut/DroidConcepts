<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shivani.androidconcepts.ActivityConcept"
    android:background="@color/background">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/toolbar"
        android:layout_marginBottom="10dp">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:typeface="serif"
          android:textSize="24dp"
          android:gravity="center"
          android:text="@string/overview"
          android:textColor="@color/white"/>
    </android.support.v7.widget.Toolbar>
   <android.support.v4.view.ViewPager
       android:layout_below="@+id/tool"
       android:id="@+id/viewpagerActivity"
       android:layout_width="match_parent"
       android:layout_height="400dp"></android.support.v4.view.ViewPager>
    
<LinearLayout
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:orientation="horizontal"
     android:layout_below="@+id/textActivity"
    android:layout_margin="5dp"
     android:gravity="center"
    android:layout_alignParentBottom="true"
     android:background="@null">
    <TextView
        android:id="@+id/backBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/item_style_blue"
        android:text="Back"
        android:textStyle="normal"
        android:typeface="serif"
        android:textColor="@color/grey"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:layout_marginRight="70dp"
        android:layout_marginTop="5dp"
        android:elevation="4dp"
        />
    <TextView
        android:id="@+id/nextBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/item_style_blue"
        android:text="Next"
        android:textStyle="normal"
        android:typeface="serif"
        android:textColor="@color/grey"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:elevation="4dp"
      
        />
 </LinearLayout>
</RelativeLayout>
